<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Closed_lost_reasoning</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISPICKVAL( StageName , &apos;Closed Lost&apos;), ISBLANK(Closed_Lost_Reason__c),ISBLANK( Closed_Lost_Reason_Commercial__c ))</errorConditionFormula>
    <errorDisplayField>Closed_Lost_Reason__c</errorDisplayField>
    <errorMessage>The Closed Lost Reasoning for both sales and commercial have to be provided.</errorMessage>
</ValidationRule>
