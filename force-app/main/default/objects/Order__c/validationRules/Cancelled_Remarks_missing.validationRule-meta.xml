<?xml version="1.0" encoding="UTF-8"?>
<ValidationRule xmlns="http://soap.sforce.com/2006/04/metadata">
    <fullName>Cancelled_Remarks_missing</fullName>
    <active>true</active>
    <errorConditionFormula>AND(ISCHANGED(Status__c),  OR(ISBLANK(Cancelled_Remarks__c),ISBLANK(Amendment_Remarks__c)))</errorConditionFormula>
    <errorMessage>Please provide remarks for Order Cancellation/CRO Amendment</errorMessage>
</ValidationRule>
